# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Database
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DB_USER="groeimetai"
DB_PASSWORD="your_secure_password"
DB_NAME="groeimetai_prod"
DB_HOST="your_db_host"

# NextAuth
NEXTAUTH_URL="https://groeimetai.com"
NEXTAUTH_SECRET="your_generated_secret_key"

# OpenAI
OPENAI_API_KEY="sk-..."

# Pinecone Vector Database
PINECONE_API_KEY="your_pinecone_api_key"
PINECONE_ENVIRONMENT="your_pinecone_environment"
PINECONE_INDEX="groeimetai-courses"

# Redis (internal Docker network)
REDIS_URL="redis://redis:6379"

# UploadThing
UPLOADTHING_SECRET="your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Email (Production SMTP)
EMAIL_SERVER_HOST="smtp.sendgrid.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey"
EMAIL_SERVER_PASSWORD="your_sendgrid_api_key"
EMAIL_FROM="noreply@groeimetai.com"

# Domain Configuration
NEXT_PUBLIC_APP_URL="https://groeimetai.com"

# Monitoring (Optional)
SENTRY_DSN="your_sentry_dsn"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"